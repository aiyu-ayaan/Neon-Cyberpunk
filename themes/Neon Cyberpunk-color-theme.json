	"tokenColors": [
		{
			"scope": [
				"comment",
				"punctuation.definition.comment"
			],
			"settings": {
				"foreground": "#a78bfa",
				"fontStyle": "italic"
			}
		},
		// Keywords - vibrant magenta
		{
			"scope": [
				"keyword",
				"storage.type",
				"storage.modifier"
			],
			"settings": {
				"foreground": "#d946ef",
				"fontStyle": "bold"
			}
		},
		// Control keywords - hot pink
		{
			"scope": [
				"keyword.control",
				"keyword.operator.new",
				"keyword.other.important"
			],
			"settings": {
				"foreground": "#ff0080",
				"fontStyle": "bold"
			}
		},
		// Functions - electric cyan
		{
			"scope": [
				"entity.name.function",
				"support.function",
				"meta.function-call"
			],
			"settings": {
				"foreground": "#00ffff",
				"fontStyle": "bold"
			}
		},
		// Classes/Types - bright lavender
		{
			"scope": [
				"entity.name.type",
				"entity.name.class",
				"support.class",
				"entity.other.inherited-class"
			],
			"settings": {
				"foreground": "#c084fc",
				"fontStyle": "bold"
			}
		},
		// Strings - neon green
		{
			"scope": [
				"string",
				"string.quoted"
			],
			"settings": {
				"foreground": "#00ff88"
			}
		},
		// String interpolation - bright cyan
		{
			"scope": [
				"string.template",
				"meta.template.expression",
				"punctuation.definition.template-expression"
			],
			"settings": {
				"foreground": "#22d3ee",
				"fontStyle": "bold"
			}
		},
		// Numbers - bright orange
		{
			"scope": [
				"constant.numeric",
				"constant.language.boolean",
				"constant.language.null"
			],
			"settings": {
				"foreground": "#ff9500"
			}
		},
		// *** NEW *** Variables - Icy blue
		{
			"scope": [
				"variable",
				"variable.other.readwrite",
				"variable.parameter"
			],
			"settings": {
				"foreground": "#a5f3fc"
			}
		},
		// Properties/Attributes - sky blue
		{
			"scope": [
				"variable.other.property",
				"variable.other.object.property",
				"support.type.property-name"
			],
			"settings": {
				"foreground": "#38bdf8"
			}
		},
		// Constants - rose pink
		{
			"scope": [
				"variable.other.constant",
				"constant.language",
				"constant.character"
			],
			"settings": {
				"foreground": "#fb7185"
			}
		},
		// Operators - bright purple
		{
			"scope": [
				"keyword.operator",
				"keyword.operator.arithmetic",
				"keyword.operator.logical"
			],
			"settings": {
				"foreground": "#a855f7"
			}
		},
		// *** NEW *** Punctuation - Bright yellow
		{
			"scope": [
				"punctuation",
				"meta.brace",
				"punctuation.separator"
			],
			"settings": {
				"foreground": "#fde047"
